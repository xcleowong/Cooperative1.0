@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vue测试</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="http://cdnjs.cloudflare.com/ajax/libs/vue/1.0.7/vue.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue-resource/0.1.17/vue-resource.js"></script>
    @*<script src="~/Scripts/vue.min.js"></script>
        <script src="~/Scripts/vue-resource.js"></script>*@

</head>
<body>
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <h2>Vue.js test demo</h2>
            <div id="app">
                <table class="table tab table-bordered table-hover" v-cloak>
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-center">姓名</th>
                            <th class="text-center">性别</th>
                            <th class="text-center">年龄</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="test in tests">
                            <td class="text-center">{{test.Id}}</td>
                            <td class="text-center">{{test.Name}}</td>
                            <td class="text-center">{{test.Sex}}</td>
                            <td class="text-center">{{test.Age}}</td>
                            <td class="text-center">
                                <input type="button" class="btn btn-danger" v-on:click="deleteTest(tests)" value="删除" />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <label>添加测试信息：{{testdata.Id}}</label>
                <div v-show="testdata.ID" class="form-group">
                    <label>ID</label>
                    <input type="text" v-model="testdata.Id" disabled="disabled" />
                </div>
                <div class="form-group">
                    <label for="">姓名</label>
                    <input type="text" class="form-control" v-model="testdata.Name">
                </div>
                <div class="form-group">
                    <label for="">性别</label>
                    <input type="text" class="form-control" v-model="testdata.Sex">
                </div>
                <div class="form-group">
                    <label for="">年龄</label>
                    <input type="text" class="form-control" v-model="testdata.Age">
                </div>
                <button class="btn btn-primary btn-block" v-on:click="createTest(test)">添加</button>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    Vue.http.options.emulateJSON = true;
    var demo = new Vue({
        el: '#app',
        data: {
            test: [{
                name: 'Id',
                isKey: true
                }, {
                    name: 'Id'
                }, {
                    name: 'Name'
                }, {
                    name: 'Sex'
                }, {
                    name: 'Age'
                }],
            tests: [],
            apiUrl: 'http://localhost:8099/test/',
            testdata: {}
        },
        ready: function () {
            this.getTests()
        },
        methods: {
            getTests: function () {
                this.$http.get(this.apiUrl + 'getTest1', function (data) {
                    this.$set('tests', data);
                })
            },
            createTest: function () {
                var vm = this
                vm.$http.post(vm.apiUrl + 'addTest', vm.testdata)
                    .then(function (respinse) {
                        vm.$set('testdata', {})
                        vm.getTests()
                    })
            },
            deleteTest: function (test) {
                var vm = this
                vm.$http.delete(this.apiUrl + '/' + test.ID)
                    .then(function (response) {
                        vm.getTests()
                    })
            }
        }
    })
</script>