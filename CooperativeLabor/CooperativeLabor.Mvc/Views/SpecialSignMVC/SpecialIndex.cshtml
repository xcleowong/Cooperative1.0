<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            searchName:"",
            GetSpecialSign: [],
            all: 6, //总页数
            cur: 1,//当前页码
            count: 0//总条数
        },
        watch: {
            cur: function (oldValue, newValue) {
            }
        },
        mounted() {
            this.SpecialSignTheRecord(this.cur);
        },
        methods: {
            btnClick: function (data) {//页码点击事件
                if (data != this.cur) {
                    this.cur = data;
                    this.SpecialSignTheRecord(data);
                }
            },
            pageClick: function () {
                //console.log('现在在' + this.cur + '页');
                this.SpecialSignTheRecord(this.cur);
            },
            //显示
            SpecialSignTheRecord: function (id) {
                axios.get("http://localhost:8099/SpecialSignTheRecord/GetSpecialSignTheRecord", { params: { pageIndex: id } }).then(
                    (response) => {
                        this.GetSpecialSign = [];
                        this.cur = response.data.CurrentPage;
                        this.all = response.data.TotlePage;
                        this.count = response.data.DataCount;
                        for (var i = 0; i < response.data.Data.length; i++) {
                            this.GetSpecialSign.push(response.data.Data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //查询
            searchSignTheRecord: function (searchName) {
                axios.get("http://localhost:8099/SpecialSignTheRecord/GetSpecialSignTheRecord", { params: { pageIndex: 1, name: searchName } }).then(
                    (response) => {
                        this.GetSpecialSign = [];
                        this.cur = response.data.CurrentPage;
                        this.all = response.data.TotlePage;
                        this.count = response.data.DataCount;
                        for (var i = 0; i < response.data.Data.length; i++) {
                            this.GetSpecialSign.push(response.data.Data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },


            //删除
            deleteById: function(Id) {
                layer.confirm('确认要删除吗？', function (index) {
                axios.post('http://localhost:8099/SpecialSignTheRecord/DeleteSpecialSignTheRecord?id=' + Id).then(
