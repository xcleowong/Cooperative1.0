
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Content/VueScripts/vue.js"></script>
    <script src="~/Content/VueScripts/axios.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <p>
            姓名：<input type="text" name="Name" />
            用工单位：<input type="text" name="Employingnit" />
            合作方名称：<input type="text" name="PartnerName" />
            <input type="button" value="搜索" />
            <input type="button" value="添加" onclick="location.href='/PersonalInformation/Add'" />
        </p>
    </div>


    <div id="app">
        <table class="table table-bordered">
            <tr>
                <td>序号</td>
                <td>编号</td>
                <td>姓名</td>
                <td>操作类型</td>
                <td>入职时间</td>
                <td>离职时间</td>
                <td>创建时间</td>
                <td>修改时间</td>
                <td>是否删除</td>
                <td>操作</td>
            </tr>
            <tr v-for="(item,index) in GetEntryDimission">
                <td><input type="text" v-model="item.Id" /></td>
                <td><input type="text" v-model="item.PersonnelId" /></td>
                <td><input type="text" v-model="item.Name" /></td>
                <td><input type="text" v-model="item.OperationType" /></td>
                <td><input type="text" v-model="item.DatesEmployed" /></td>
                <td><input type="text" v-model="item.DepartureTime" /></td>
                <td><input type="text" v-model="item.CreationTime" /></td>
                <td><input type="text" v-model="item.ModificationTime" /></td>
                <td><input type="text" v-model="item.IsDelete" /></td>
                <td>
                    <div v-if="GetEntryDimission.Id!=''">
                        <a href="#" v-on:click="updateContact(GetEntryDimission.Name, GetPersonalInformation.UserName, GetPersonalInformation.Gender, GetPersonalInformation.Birthday, GetPersonalInformation.Nation, GetPersonalInformation.Employingnit, GetPersonalInformation.PartnerName, GetPersonalInformation.ProfessionalSkill, GetPersonalInformation.MaritalStatus, GetPersonalInformation.IDNumber, GetPersonalInformation.PartyGroupings, GetPersonalInformation.Email, GetPersonalInformation.Post, GetPersonalInformation.Phone, GetPersonalInformation.CardNo, GetPersonalInformation.OpeningBank, GetPersonalInformation.CreationTime, GetPersonalInformation.ModificationTime, GetPersonalInformation.IsDelete,GetPersonalInformation.Id)">修改</a>
                        <a href="#" v-on:click="deleteById(GetPersonalInformation.Id)">删除</a>
                    </div>
                    <div v-else>
                        <a href="#" v-on:click="addContact(EntryAndExitRecord.PartnerName,EntryAndExitRecord.PartnerCategory,EntryAndExitRecord.BusinessLicense,EntryAndExitRecord.OperationType,EntryAndExitRecord.ApproachTime,EntryAndExitRecord.Departuretime,EntryAndExitRecord.Remark,EntryAndExitRecord.AttachmentName,EntryAndExitRecord.AttachmentPath,EntryAndExitRecord.CreationTime,EntryAndExitRecord.ModificationTime,EntryAndExitRecord.IsDelete)">添加</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            GetEntryDimission: []
        },
        mounted() {
            this.GetPersonal();
        },
        methods: {
            //显示
            GetPersonal: function () {
                axios.get("http://localhost:8099/EntryDimission/GetEntryDimissionRecords").then(
                    (response) => {
                        console.log(response);
                        this.GetEntryDimission = response.data;
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //删除
            deleteById: function (id) {
                axios.post('http://localhost:8099/EntryDimission/DeleteEntry?id=' + id).then(
                    (response) => {
                        this.GetEntryDimission = response.data;
                        //for (var i = 0; i < response.data.length; i++) {
                        //    this.contactsList.push(response.data[i]);
                        //}
                        //this.contactsList.push({ Id: "", Name: "", PhoneNo: "", EmailAddress: "" });
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            ////修改质检计划信息
            updateContact: function (Name, OperationType, DatesEmployed, DepartureTime, ModificationTime, IsDelete, Id) {
                var params = new URLSearchParams();
                params.append('Name', Name);
                params.append('OperationType', OperationType);
                params.append('DatesEmployed', DatesEmployed);
                params.append('DepartureTime', DepartureTime);
                params.append('ModificationTime', ModificationTime);
                params.append('IsDelete', IsDelete);
                params.append('Id', Id);
                axios.post('http://localhost:8099/EntryDimission/UpdateEntry?id=' + Id, params).then(
                    (response) => {
                        console.log(response.data);
                        if (response.data > 0) {
                            alert("修改成功!!!");
                            this.getList();
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
        }
    })
</script>