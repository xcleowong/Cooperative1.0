            <hr class="hr20" >
        </form>
    </div>
    
    <script>

        function Login() {
            $.ajax({
                url: "http://localhost:8099/Login/Login",
                type: "get",
                data: $("#form1").serialize(),
                success: function (data) {

                    if (data != null) {
                        //alert("登陆成功!");
                        location.href = '/Login/Index'
                    }
                    else {
                        alert("登录失败!");
                    }
                }
            })
