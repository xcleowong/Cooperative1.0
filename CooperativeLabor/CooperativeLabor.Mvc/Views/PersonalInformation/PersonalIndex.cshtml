<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            searchName: "",
            searchemployingnit: "",
            searchpartnerName: "",
            GetPersonalInformation: [],
            all: 6, //总页数
            cur: 1,//当前页码
            count: 0//总条数
        },
        watch: {
            cur: function (oldValue, newValue) {
            }
        },
        mounted() {
            this.GetPersonal(this.cur);
        },
        methods: {
            btnClick: function (data) {//页码点击事件
                if (data != this.cur) {
                    this.cur = data;
                    this.GetPersonal(data);
                }
            },
            pageClick: function () {
                //console.log('现在在' + this.cur + '页');
                this.GetPersonal(this.cur);
            },
            //显示
            GetPersonal: function (id) {
                axios.get("http://localhost:8099/PersonalInformation/GetPersonalInformation", { params: { pageIndex: id } }).then(
                    (response) => {
                        this.GetPersonalInformation = [];
                        this.cur = response.data.CurrentPage;
                        this.all = response.data.TotlePage;
                        this.count = response.data.DataCount;
                        for (var i = 0; i < response.data.Data.length; i++) {
                            this.GetPersonalInformation.push(response.data.Data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //查询
            searchPersonal: function (searchName, searchemployingnit, searchpartnerName) {
                axios.get("http://localhost:8099/PersonalInformation/GetPersonalInformation?pageIndex=1" + "&name=" + searchName + "&employingnit=" + searchemployingnit + "&partnerName=" + searchpartnerName).then(
                    (response) => {
                        this.GetPersonalInformation = [];
                        this.cur = response.data.CurrentPage;
                        this.all = response.data.TotlePage;
                        this.count = response.data.DataCount;
                        for (var i = 0; i < response.data.Data.length; i++) {
                            this.GetPersonalInformation.push(response.data.Data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },


            //删除
            deleteById: function (id) {
                layer.confirm('确认要删除吗？', function (index) {
                    axios.post('http://localhost:8099/PersonalInformation/DeletePersonalInformation?id=' + id).then(
                        (response) => {
                            if (response.data > 0) {
                                layer.msg('已删除!', { icon: 1, time: 1000 }); 
                            }
                        },
                        (response) => {
                            alert(response.status);
                        }
                    ).catch(function (response) {
                        alert(response);
                        });
                    //$(obj).parents("tr").remove();
                })
            },
            ////修改
            updateContact: function (Name, UserName, Gender, Birthday, Nation, Employingnit, PartnerName, ProfessionalSkill, MaritalStatus, IDNumber, PartyGroupings, Email, Post, Phone, CardNo, OpeningBank, CreationTime, ModificationTime, IsDelete, Id) {
                var params = new URLSearchParams();
                params.append('Name', Name);
                params.append('UserName', UserName);
                params.append('Gender', Gender);
                params.append('Birthday', Birthday);
                params.append('Nation', Nation);
                params.append('Employingnit', Employingnit);
                params.append('PartnerName', PartnerName);
                params.append('ProfessionalSkill', ProfessionalSkill);
                params.append('MaritalStatus', MaritalStatus);
                params.append('IDNumber', IDNumber);
                params.append('PartyGroupings', PartyGroupings);
                params.append('Email', Email);
                params.append('Post', Post);
                params.append('Phone', Phone);
                params.append('CardNo', CardNo);
                params.append('OpeningBank', OpeningBank);
                params.append('CreationTime', CreationTime);
                params.append('ModificationTime', ModificationTime);
                params.append('IsDelete', IsDelete);
                params.append('Id', Id);
                axios.post('http://localhost:8099/PersonalInformation/UpdatePersonalInformation?id=' + Id, params).then(
                    (response) => {
                        console.log(response.data);
                        if (response.data > 0) {
                            alert("修改成功!!!");
                            this.getList();
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
        },

        //计算属性
            computed: {
            indexs: function () {
                var left = 1;
                var right = this.all;
                var ar = [];
                if (this.all >= 5) {
                    if (this.cur > 3 && this.cur < this.all - 2) {
                        left = this.cur - 2
                        right = this.cur + 2
                    } else {
                        if (this.cur <= 3) {
                            left = 1
                            right = 5
                        } else {
                            right = this.all
                            left = this.all - 4
                        }
                    }
                }
                while (left <= right) {
                    ar.push(left)
                    left++
                }
                return ar
            }

        }
    })
</script>

